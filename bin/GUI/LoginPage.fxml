<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginPageController">
	<bottom>
		<AnchorPane prefHeight="300.0" prefWidth="400.0" BorderPane.alignment="CENTER">
			<children>
				<TextField fx:id="usernameInput" layoutX="103.0" layoutY="137.0" prefHeight="30.0" prefWidth="230.0" />
				<Text layoutX="31.0" layoutY="157.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Username" />
				<Text layoutX="33.0" layoutY="219.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password" />
				<PasswordField fx:id="passwordInput" layoutX="103.0" layoutY="199.0" prefHeight="30.0" prefWidth="230.0" />
				<Button fx:id="clearLogin" cancelButton="true" layoutX="103.0" layoutY="251.0" mnemonicParsing="false" onAction="#deleteInput" prefHeight="35.0" prefWidth="100.0" text="Clear" />
