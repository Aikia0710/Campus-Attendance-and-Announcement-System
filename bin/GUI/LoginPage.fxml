				<ImageView fitHeight="106.0" fitWidth="107.0" layoutX="147.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
					<image>
						<Image url="@../logo_icon.png" />
					</image>
				</ImageView>
				<Button fx:id="register" layoutX="96.0" layoutY="167.0" mnemonicParsing="false" style="-fx-background-color: #00000000;" text="New user? Create an account" textFill="#8d8c8c" underline="false">
